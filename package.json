{
  "icon": "icon.jpeg",
  "name": "copy-paste-developer",
  "displayName": "Copy Paste Developer",
  "description": "a stress release extension",
  "version": "0.0.2",
  "publisher": "cooldev",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "fun",
    "paste",
    "joke",
    "stress"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-paste-developer.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Copy Paste Developer",
      "properties": {
        "copyPasteDeveloper.message": {
          "type": "string",
          "default": "ðŸ˜… Thak gaye ho copyâ€“paste karkeâ€¦ ye lo paani pee lo ðŸ¥¤ (Tired of copyâ€“pasting? Here, have some water ðŸ¥¤)",
          "description": "Message to show when a large paste is detected."
        },
        "copyPasteDeveloper.minWords": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "description": "Minimum number of words inserted to treat as a paste."
        },
        "copyPasteDeveloper.minLines": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "description": "Minimum lines inserted to treat as a paste."
        },
        "copyPasteDeveloper.cooldownSeconds": {
          "type": "number",
          "default": 12,
          "minimum": 1,
          "description": "Cooldown between messages."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}